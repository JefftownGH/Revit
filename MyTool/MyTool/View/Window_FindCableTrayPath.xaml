<Window x:Class="MyTool.View.Window_FindCableTrayPath"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTool.View"
        xmlns:localHelper="clr-namespace:MyTool.ViewModel"
        mc:Ignorable="d"
        Title="Window_FindCableTrayPath" Height="350" Width="250" MinHeight="230"
        WindowStyle="None"
        localHelper:DialogCloser.DialogResult="{Binding DialogResult}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TextBlock Text="可实现的电缆走向有下列选项" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ListBox Grid.Row="1" Margin="5" BorderBrush="Black" ItemsSource="{Binding PathList}" SelectedItem="{Binding PathElemIds}"/>
        <Button Grid.Row="2" Width="80" Height="30" Content="关闭" Command="{Binding CloseCmd}" FontSize="12"/>
    </Grid>
</Window>
